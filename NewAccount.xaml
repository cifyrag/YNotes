<Page x:Class="YNotes.NewAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YNotes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewAccount" Height="550" Width="550" MinWidth="550" MinHeight="550" >
    <Grid >


        <Border HorizontalAlignment="Center" MinWidth="440" MaxWidth="440" VerticalAlignment="Center" CornerRadius="30" Padding="20" Margin="15" Background="#FFD1D1D1" >
            <StackPanel>
                <TextBlock Foreground="#FF3B3561" Margin="0 0 0 15" FontSize="22"><Run Text="Create "/><Run Text="a "/><Run Text="new account"/><Run Language="en-gb" Text="!"/></TextBlock>

                <TextBlock Text="Enter a login "  Foreground="#466c82" FontStyle="Italic" Margin="0 0 0 3" FontSize="16"/>
                <TextBox BorderBrush="Transparent"  Background="#FFBDBDBD" Margin="0 0 0 8" Height="20" />

                <TextBlock Text="Enter a password"  Foreground="#466c82" FontStyle="Italic" Margin="0 0 0 3" FontSize="16"/>
                <PasswordBox BorderBrush="Transparent"  Background="#FFBDBDBD" Margin="0 0 0 8" Height="20" />
                <TextBlock Text="Enter the password one more time"  Foreground="#466c82" FontStyle="Italic" Margin="0 0 0 3" FontSize="16"/>
                <PasswordBox BorderBrush="Transparent"  Background="#FFBDBDBD" Margin="0 0 0 8" Height="20" />

                <TextBlock Text="Enter your email"  Foreground="#466c82" FontStyle="Italic" Margin="0 0 0 3" FontSize="16"/>
                <TextBox BorderBrush="Transparent"  Background="#FFBDBDBD" Margin="0 0 0 8" Height="20" />

                <Button x:Name="SignUp" Content="Sign up" Margin="0 0 0 10" Background="#51A3A3" Cursor="Hand" FontSize="22" BorderBrush="Transparent" Foreground="#FFD8D8D8" Padding="2" Width="400"  HorizontalAlignment="Center" Click="SignUp_Click"  />
                <Button  x:Name="LogIn" Content="Log in" Background="Transparent" Cursor="Hand" FontSize="16" BorderBrush="Transparent" HorizontalAlignment="Right" Foreground="#FF3B3561" FontWeight="Bold" Click="LogIn_Click"/>
            </StackPanel>
        </Border>

    </Grid>

</Page>
